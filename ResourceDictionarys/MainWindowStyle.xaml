<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Styles-->
    <Style x:Key="adminloginStockleftblock" TargetType="StackPanel">
        <Setter Property="Width" Value="auto"/>
    </Style>
    <Style x:Key="newUserLeftAnnouncement" TargetType="StackPanel">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Height" Value="250"/>
        <Setter Property="Margin" Value="0 10 0 0"/>
    </Style>
    <Style x:Key="newUserInputFiels" TargetType="StackPanel">
        <Setter Property="Width" Value="390"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="25 0 0 0"/>
    </Style>
    <Style x:Key="stackNewuser" TargetType="StackPanel">
        <Setter Property="Width" Value="850"/>
        <Setter Property="Height" Value="470"/>
        <Setter Property="Visibility" Value="{Binding Path=adminfields.IsViewNewUser,Converter={StaticResource ConvertBoleanVisibility}}"/>
    </Style>
    <Style x:Key="newUserLogoBorder" TargetType="Border">
        <Setter Property="Width" Value="88"/>
        <Setter Property="Height" Value="88"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="CornerRadius" Value="44"/>
    </Style>

    <Style x:Key="conformPassBlock1" TargetType="Border">
        <Setter Property="Visibility" Value="{Binding Path=adminfields.ConfirmPasswordTextBlock,Converter={StaticResource ConvertBoleanVisibility}}"/>
        <Setter Property="Margin" Value="0 10 0 10"/>
    </Style>
    <Style x:Key="conformPassBlock2" TargetType="Border">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="CornerRadius" Value="5.25"/>
        <Setter Property="Visibility" Value="{Binding Path=adminfields.ConfirmPasswordInput,Converter={StaticResource ConvertBoleanVisibility}}"/>
        <Setter Property="Padding" Value="5 5"/>
    </Style>
    <Style x:Key="newUserImgLogoLeft" TargetType="Image">
        <Setter Property="Source" Value="/Assarts/AddUser.png"/>
        <Setter Property="Stretch" Value="Fill"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Width" Value="60"/>
        <Setter Property="Margin" Value="5 0 0 8"/>
    </Style>
    <Style x:Key="imgLoginVerify" TargetType="Image">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Source" Value="{StaticResource imgverify}"/>
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="Height" Value="65"/>
        <Setter Property="Width" Value="65"/>
    </Style>
    <Style x:Key="imgLoginVerifySuper" TargetType="Image">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Source" Value="{StaticResource imgverifySuper}"/>
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="Height" Value="65"/>
        <Setter Property="Width" Value="65"/>
    </Style>

    <Style x:Key="loginVerifyLogo" TargetType="Border">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="CornerRadius" Value="50"/>
        <Setter Property="Margin" Value="0 35 0 0"/>
        <Setter Property="Height" Value="95"/>
        <Setter Property="Width" Value="95"/>
        <Setter Property="BorderThickness" Value="4"/>
        <Setter Property="BorderBrush" Value="#EEEFF3"/>
    </Style>
        
    <Style x:Key="adminloginStickpanelText" TargetType="TextBlock">
        <Setter Property="Text" Value="Please log in using your personal information to stay connected with reporting service."/>
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="10 40 10 0"/>
    </Style>

    <Style x:Key="adminHeadtext" TargetType="TextBlock">
        <Setter Property="Text" Value="Login.."/>
        <Setter Property="FontSize" Value="35"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0 100 0 0"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="welcomeTextBlock" TargetType="TextBlock">        
        <Setter Property="Foreground" Value="white"/>
        <Setter Property="FontFamily" Value="Times New Roman Bold"/>
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0 80 0 0"/>
    </Style>
    <Style x:Key="newUserLeftHederTxt" TargetType="TextBlock">
        <!--<Setter Property="Text" Value="Sign Up"/>-->
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Arial Bold"/>
        <Setter Property="FontSize" Value="25"/>
    </Style>
    <Style x:Key="newUserAnnouncementContain" TargetType="TextBlock">     
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="13 0 13 0"/>
    </Style>
    <Style x:Key="newUserRightHederText" TargetType="TextBlock">
         <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontFamily" Value="Segoe UI Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="18 20 0 0"/>
    </Style>

    <Style x:Key="btnForgetPassword" TargetType="Button">
        <Setter Property="Height" Value="29"/>
        <Setter Property="Margin" Value="0 0 0 0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="bdr_newUser" BorderBrush="#0064c1" BorderThickness="0,0,0,1">
                        <ContentPresenter VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bdr_newUser" Property="Background" Value="Transparent"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bdr_newUser" Property="Background" Value="Transparent"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="btnExerciseWindow" TargetType="Button">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Content" Value="Login"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Arial Unicode MS Regular"/>
    </Style>

    <Style x:Key="btnLogin" TargetType="Button">
        <Setter Property="Width" Value="120"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Content" Value="Login"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="White"/>
        <!--<Setter Property="Command" Value="{Binding LoginCommand}"/>-->
        <Setter Property="Visibility" Value="{Binding Path=adminfields.IsLoginButton,Converter={StaticResource ConvertBoleanVisibility}}"/>
        <Setter Property="FontFamily" Value="Arial Unicode MS Regular"/>
    </Style>
    <Style x:Key="btnNewuser" TargetType="Button">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="29"/>
        <!--<Setter Property="Content" Value="CREATE USER"/>-->
        <Setter Property="Margin" Value="20 0 0 0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Command" Value="{Binding CreateUserCommand}"/>
        <Setter Property="Visibility" Value="{Binding Path=adminfields.IsNewUserButton,Converter={StaticResource ConvertBoleanVisibility}}"/>
        <Setter Property="FontFamily" Value="Arial Unicode MS Regular"/>
    </Style>
    <Style x:Key="btnRestPassword" TargetType="Button">
        <Setter Property="Width" Value="132"/>
        <Setter Property="Height" Value="29"/>
        <Setter Property="Content" Value="Reset Password"/>
        <Setter Property="Margin" Value="0 0 0 0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="White"/>
        <!--<Setter Property="Command" Value="{Binding ResetPasswordCommand}"/>-->
        <Setter Property="Visibility" Value="{Binding Path=adminfields.IsResetButton,Converter={StaticResource ConvertBoleanVisibility}}"/>
        <Setter Property="FontFamily" Value="Arial Unicode MS Regular"/>
    </Style>

    <Style TargetType="Button" x:Key="BtnClosePopup">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="22"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Content" Value="CANCEL"/>
        <Setter Property="Foreground" Value="OrangeRed"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Arial Unicode MS Bold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="bdr_main" Background="#EEEFF3" CornerRadius="0 10 10 0">
                        <Border.BorderThickness>
                            <Thickness/>
                        </Border.BorderThickness>
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0.5" Color="#000000"/>
                        </Border.Effect>
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bdr_main" Property="Background" Value="#750037"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bdr_main" Property="Background" Value="{StaticResource GradientBackground}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="BtnSubmitPopup">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="22"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Content" Value="SELECT"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Arial Unicode MS Bold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="bdr_main" Background="#EEEFF3" CornerRadius="10 0 0 10">
                        <Border.BorderThickness>
                            <Thickness/>
                        </Border.BorderThickness>
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0.5" Color="#000000"/>
                        </Border.Effect>
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bdr_main" Property="Background" Value="#750037"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bdr_main" Property="Background" Value="{StaticResource GradientBackground}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="btnNewUser">
        <Setter Property="Content" Value="Cancel"></Setter>
        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="Height" Value="29"></Setter>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="20 0 0 0"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Arial Unicode MS Regular"/>
    </Style>
    <Style TargetType="Button" x:Key="btnCreate">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="29"/>
        <Setter Property="Cursor" Value="Hand"/>        
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Arial Unicode MS Regular"/>
    </Style>

    <Style x:Key="FindDeviceListView" TargetType="ListView">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontFamily" Value="Arial Unicode MS"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="ItemsSource" Value="{Binding Path=adminfields.DeviceCollection}"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Hidden"/>
    </Style>
    <Style x:Key="FindDeviceItem" TargetType="{x:Type ListViewItem}">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BorderBrush" Value="#34496A"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                    <Border x:Name="bDrItemView" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="bDrItemView" Value="{StaticResource GradientBackground}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>