<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes">


    <Style x:Key="ReportMenu" TargetType="MenuItem">
        <Setter Property="BorderThickness" Value="0 1 0 1"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Border x:Name="MenuItemBorder" Height="40" Width="270" Background="{TemplateBinding Background}"  
                    BorderBrush="{TemplateBinding BorderBrush}"  BorderThickness="{TemplateBinding BorderThickness}" HorizontalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="4.5*"/>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Grid.Column="0" Margin="5,0,0,0" x:Name="Icon" Height="{TemplateBinding Height}" 
                                     Width="{TemplateBinding Width}" VerticalAlignment="Center" HorizontalAlignment="Left" ContentSource="Icon"/>

                            <ContentPresenter Grid.Column="1" Margin="0,0,0,0" VerticalAlignment="Center" TextBlock.FontSize="16" 
                                TextBlock.FontFamily="Arial Unicode MS Regular" HorizontalAlignment="Left" ContentSource="Header"
                                      RecognizesAccessKey="True" TextBlock.Foreground="White"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="MenuItemBorder" Value="#2969BB" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ReportMenuExpand" TargetType="MenuItem">
        <Setter Property="BorderThickness" Value="0 1 0 0"/>
        <Setter Property="BorderBrush" Value="#283A43"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Border x:Name="MenuItemBorder" Height="50" Width="270"  
                BorderBrush="{TemplateBinding BorderBrush}"  BorderThickness="{TemplateBinding BorderThickness}" HorizontalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="4.5*"/>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Grid.Column="0" Margin="5,0,0,0" x:Name="Icon" Height="{TemplateBinding Height}" 
                                 Width="{TemplateBinding Width}" VerticalAlignment="Center" HorizontalAlignment="Left" ContentSource="Icon"/>

                            <ContentPresenter Grid.Column="1" Margin="0,0,0,0" VerticalAlignment="Center" TextBlock.FontSize="16" 
                            TextBlock.FontFamily="Arial Unicode MS Regular" HorizontalAlignment="Left" ContentSource="Header"
                                  RecognizesAccessKey="True" TextBlock.Foreground="White"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="MenuItemBorder" Value="Transparent" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="Button" x:Key="btnReportView">
        <Setter Property="Width" Value="260"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Content" Value="Generate Report"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Arial Unicode MS Bold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border  x:Name="bdr_main" Background="#0064C1" BorderBrush="White" BorderThickness="1" CornerRadius="0,0,0,0">
                       
                       
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>                    
                        
                    </Border>                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bdr_main" Property="Background" Value="YellowGreen"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bdr_main" Property="Background" Value="#28A745"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="btnReportViewFIlter">
        <Setter Property="Width" Value="280"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Content" Value="Generate Report"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Arial Unicode MS Bold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border  x:Name="bdr_main" Background="#0064C1" BorderBrush="Transparent" BorderThickness="1" CornerRadius="0,0,0,0">


                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bdr_main" Property="Background" Value="YellowGreen"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bdr_main" Property="Background" Value="#28A745"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="btnhelp">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="270"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Content" Value="Help"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="White"/> 
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontFamily" Value="Arial Unicode MS Regular"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <StackPanel x:Name="bdr_main" Background="#0064C1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5.5*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Source="/Assarts/Help.png" Stretch="Fill" Width="30" Margin="0 5 0 0" Height="30" HorizontalAlignment="Left"/>
                            <ContentPresenter Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0 10 0 0"/>
                        </Grid>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bdr_main" Property="Background" Value="#2969BB"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bdr_main" Property="Background" Value="#2969BB"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="btnReportClose">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="26"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Content" Value="CLOSE"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontFamily" Value="Arial Unicode MS Bold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="bdr_main" Background="{StaticResource Brush00517D}" CornerRadius="0 0 0 13">
                        <Border.BorderThickness>
                            <Thickness/>
                        </Border.BorderThickness>
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0.5" Color="#FF116FA4"/>
                        </Border.Effect>
                        <ContentPresenter x:Name="btnCloseContent" VerticalAlignment="Center" HorizontalAlignment="Center" TextBlock.Foreground="{TemplateBinding Foreground}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bdr_main" Property="Background" Value="#FF116FA4"/>
                            <Setter TargetName="btnCloseContent" Property="TextBlock.Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bdr_main" Property="Background" Value="#006C7D"/>
                            <Setter TargetName="btnCloseContent" Property="TextBlock.Foreground" Value="Red"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>