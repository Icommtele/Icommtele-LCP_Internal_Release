    <Style x:Key="Button_Main_WhiteText" TargetType="{x:Type Button}" BasedOn="{StaticResource Button_Sub}">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Name="border" BorderThickness="1" BorderBrush="#0064C1" CornerRadius="4" Background="{TemplateBinding Background}">
                        <Grid>
                            <ContentPresenter Name="content"  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            <Border x:Name="line" CornerRadius="0,0,2,2" BorderThickness="0,0,0,1" Margin="0,0,0,2" VerticalAlignment="Bottom" BorderBrush="Transparent"/>
                            <Border x:Name="shadow" CornerRadius="0,0,2,2" BorderThickness="0,0,0,2" VerticalAlignment="Bottom" BorderBrush="Transparent"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="Transparent"/>
                            <Setter TargetName="line" Property="BorderBrush" Value="Black"/>
                            <Setter TargetName="shadow" Property="BorderBrush" Value="#0F5FA6"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#BECFE1"/>
                            <Setter TargetName="line" Property="BorderBrush" Value="#1891FF"/>
                        </Trigger>
