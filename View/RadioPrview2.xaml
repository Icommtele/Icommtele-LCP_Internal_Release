<Window x:Class="LCPReportingSystem.View.RadioPrview2"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LCPReportingSystem.View" xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
       Title="Radio" Height="900" Width="1600" WindowState="Maximized">
    <Window.Resources>
        <ResourceDictionary Source="/ResourceDictionarys/MainStyle.xaml" />
    </Window.Resources>
    <Window.InputBindings>
        <StaticResource  ResourceKey="CtrlLeftKeyBinding"/>
        <StaticResource  ResourceKey="CtrlRightKeyBinding"/>
    </Window.InputBindings>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition  Width="400" />
            <ColumnDefinition  Width="400" />
            <ColumnDefinition  Width="400" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="4" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right"  >
            <materialdesign:PackIcon Foreground="YellowGreen" Height="25" Width="70" Kind="Radio" />
        </StackPanel>
        <TextBlock Grid.Column="0" Grid.Row="0"  Text="   Radio" Width="200" HorizontalAlignment="Left" Margin="10, 0 ,0, 0" Style="{StaticResource subSystemHederText}" />
        <Border Background="#EEEFF3" Grid.Column="0" Height="auto" Grid.Row="1" Grid.ColumnSpan="4" Grid.RowSpan="6" Margin="10,0,10,5"  Style="{x:Null}" BorderBrush="#0064C1"  BorderThickness="0,30,0,0">
            <Border BorderBrush="#D6D6D6" Grid.Column="0" Grid.Row="0" Style="{x:Null}" BorderThickness="1,0,1,1"  >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="1" Margin="10,-20,0,0"  FontWeight="DemiBold" Text="Terminal Mode :" Style="{StaticResource TextBlockText}"/>
                    <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal">
                        <Button Height="17" Width="17" Background="#FF0000" Margin="10, -50, 0, 0"  Template="{StaticResource ctCircle}" Cursor="Hand" 
                                                                BorderBrush="{Binding Path=dashboard.TerminalModeBase,Converter={StaticResource convertColer}}">
                            <Button.Effect>
                                <DropShadowEffect ShadowDepth="1" Color="#061E46"/>
                            </Button.Effect>
                        </Button>
                        <TextBlock Text="Base" Grid.Column="1"  Style="{StaticResource TextBlockText}" Margin="10, -20, 0, 0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal">
                        <Button Height="17" Width="17" Background="#FF0000" Margin="10, -50, 0, 0" Template="{StaticResource ctCircle}" Cursor="Hand" 
                                                                BorderBrush="{Binding Path=dashboard.TerminalModeRemote,Converter={StaticResource convertColer}}">
                            <Button.Effect>
                                <DropShadowEffect ShadowDepth="1" Color="#061E46"/>
                            </Button.Effect>
                        </Button>
                        <TextBlock Text="Remote"  Style="{StaticResource TextBlockText}" Margin="10 ,-20, 0, 0"/>
                    </StackPanel>
                    <StackPanel  Grid.Column="3" Grid.Row="1" Orientation="Horizontal">
                        <Button Height="17" Width="17" Background="#FF0000" Margin="10, -50, 0, 0" Template="{StaticResource ctCircle}" Cursor="Hand" 
                                                                BorderBrush="{Binding Path=dashboard.TerminalModeRepeater,Converter={StaticResource convertColer}}">
                            <Button.Effect>
                                <DropShadowEffect ShadowDepth="1" Color="#061E46"/>
                            </Button.Effect>
                        </Button>
                        <TextBlock Text="Repeater" Style="{StaticResource TextBlockText}" Margin="10, -20, 0, 0"/>
                    </StackPanel>
                    <TextBlock Grid.Column="0" Grid.Row="2" Height="30" Margin="50,-30,0,0"  FontWeight="DemiBold" Text="IP ADDRESS" Grid.ColumnSpan="2" Style="{StaticResource TextBlockText}" />

