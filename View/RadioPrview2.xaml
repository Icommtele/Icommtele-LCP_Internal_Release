                        <materialdesign:PackIcon Foreground="HotPink" Height="30" Width="60" Margin="0,-40, 0, 0" Kind="IpNetwork" />
                    </StackPanel>
                    <TextBlock Grid.Column="0" Grid.Row="3" Width="130" Height="40" HorizontalAlignment="Left" Margin="50 ,0 ,0, 0" Text="ManagerIpAddress :" Style="{StaticResource TextBlockText}"/>
                    <TextBlock Grid.Column="1" Grid.Row="3"  Margin="10,0, 0, 0" Text="{Binding Path=dashboard.ManagerIp}" FontWeight="DemiBold" Style="{StaticResource TextBlockText}"/>
                    <TextBlock Grid.Column="0" Grid.Row="4" Height="40" Margin="50, 0, 0, 0" Text="NetMaskIpAddress :" Style="{StaticResource TextBlockText}"/>
                    <TextBlock Grid.Column="1" Grid.Row="4"  Margin="10 0 0 5" FontWeight="DemiBold" Text="{Binding Path=dashboard.ManagerNetMaskIp}" Style="{StaticResource TextBlockText}"/>
                </Grid>
            </Border>
        </Border>
        <Border Background="#EEEFF3" Grid.Column="0" Height="auto" Grid.Row="7" Grid.ColumnSpan="4"  Grid.RowSpan="4" Margin="10,0,10,5"  Style="{x:Null}" BorderBrush="#0064C1"  BorderThickness="0,30,0,0">
            <Border BorderBrush="#D6D6D6" Grid.Column="0" Grid.Row="0" Style="{x:Null}"  BorderThickness="1,0,1,1"  >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <TextBlock Margin="50, 10, 0, 0" Height="30" Grid.Column="0" Grid.Row="0" Text="Voltage" FontWeight="DemiBold" Style="{StaticResource TextBlockText}" />
                    <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left"  VerticalAlignment="Top">
                        <materialdesign:PackIcon Foreground="HotPink" Margin="-10,-35, 0, 0" Height="30" Width="60" Kind="EnergyCircle" />
                    </StackPanel>

                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="50,0,0,0" Orientation="Horizontal">
                        <TextBlock Text="+5V :" Style="{StaticResource TextBlockText}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Path=dashboard.Voltage5VA}" Style="{StaticResource TextBlockText}" Margin="8 0 0 0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,0" Orientation="Horizontal">
                        <TextBlock Text="+12V :" Style="{StaticResource TextBlockText}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Path=dashboard.Voltage12v}" Style="{StaticResource TextBlockText}" Margin="8 0 0 0"/>
                    </StackPanel>

                    <StackPanel  Margin="10,0,0,0" Grid.Column="2" Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="-5V :" Style="{StaticResource TextBlockText}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Path=dashboard.Voltageneg5v}" Style="{StaticResource TextBlockText}" Margin="8 0 0 0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="3" Grid.Row="1" Margin="10,0,0,0" Orientation="Horizontal">
                        <TextBlock Text="+49V :" Style="{StaticResource TextBlockText}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Path=dashboard.Voltage49v}" Style="{StaticResource TextBlockText}" Margin="8 0 0 0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
        <!--</StackPanel>-->
        <!--<StackPanel Width="810" Margin="710 40 0 0">-->
        <Border Background="#EEEFF3" Grid.Column="0" Height="auto" Grid.Row="11" Grid.ColumnSpan="4" Grid.RowSpan="9" Margin="10,0,10,3"  Style="{x:Null}" BorderBrush="#0064C1"  BorderThickness="0,30,0,0">
