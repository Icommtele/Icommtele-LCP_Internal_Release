<UserControl x:Class="LCPReportingSystem.UserControls.SubSysConfigUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LCPReportingSystem.UserControls" xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="795" d:DesignWidth="1500">
    <UserControl.Resources>
        <Style x:Key="ScrollThumbs" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid x:Name="Grid">
                            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" 
                       Height="Auto" Fill="Transparent"/>
                            <Border x:Name="Rectangle1" CornerRadius="0 0 0 0" HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch" Width="Auto" Height="Auto" 
                    Background="#0064C1"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Horizontal">
                                <Setter TargetName="Rectangle1" Property="Width" Value="Auto"/>
                                <Setter TargetName="Rectangle1" Property="Height" Value="7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--SCROLLBARS-->
        <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="Foreground" Value="#034268"/>
            <Setter Property="Background" Value="#684268"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="GridRoot" Width="8" Background="{x:Null}">
                            <Track x:Name="PART_Track" Grid.Row="0" IsDirectionReversed="true" Focusable="False">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Background="{TemplateBinding Foreground}" 
                           Style="{DynamicResource ScrollThumbs}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="False"/>
                                </Track.IncreaseRepeatButton>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="False"/>
                                </Track.DecreaseRepeatButton>
                            </Track>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger SourceName="Thumb" Property="IsMouseOver" Value="true">
                                <Setter Value="{DynamicResource ButtonSelectBrush}" 
                        TargetName="Thumb" Property="Background"/>
                            </Trigger>
                            <Trigger SourceName="Thumb" Property="IsDragging" Value="true">
                                <Setter Value="{DynamicResource DarkBrush}" TargetName="Thumb" Property="Background"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="Thumb" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter TargetName="GridRoot" Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="-90"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="PART_Track" Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="-90"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Width" Value="Auto"/>
                                <Setter Property="Height" Value="12"/>
                                <Setter TargetName="Thumb" Property="Tag" Value="Horizontal"/>
                                <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand"/>
                                <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="#EEEFF3">
        <!--<Grid.Effect>
            <DropShadowEffect ShadowDepth="1" Color="{StaticResource Color061E46}"/>
        </Grid.Effect>-->
        <StackPanel>
            <Grid Background="#0064C1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.ColumnSpan="2" Height="35" Background="White" Grid.Row="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>

                    </Grid.ColumnDefinitions>
                    <Border BorderThickness="0,0,0,1" BorderBrush="LightGray" Height="35" Grid.Column="0">
                        <TextBlock Text="SUBSYSTEM CONFIGURATION" Width="250" Foreground="White" Background="#0064c1"   FontSize="16" Height="35"  Padding="5,5,0,0" FontWeight="SemiBold" />

                    </Border>

                    <TextBlock Grid.Column="1" Text="{Binding Path=subSystemConfig.SubSystemName}" Foreground="#0064C1" FontSize="16" Padding="5,5,0,0" HorizontalAlignment="Center" Margin="400,0,0,0" FontWeight="Bold" />
                    <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="top">

                        <Button x:Name="btnEdit" Visibility="Collapsed"  Style="{StaticResource btnEdit}" Margin="5,0,0,0" Command="{Binding SubSysConfigEditCommand}"/>
                        <Button  Visibility="Collapsed" Style="{StaticResource btnRefresh}" Margin="5,0,0,0" Command="{Binding RefreshCommand}"/>

                    </StackPanel>
                       
                    </Grid>
                
                <Border Grid.Column="0" Grid.Row="1" Margin="0,0,0,0">
                    <Grid Height="795">
                        <StackPanel>
                            
                           
                            <Menu x:Name="SubSystemMenu">
                                <Menu.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </Menu.ItemsPanel>
                                <MenuItem Header="Diesel Generator"  Click="MenuItem_Click"  CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Header}"
 Command="{Binding DgConfigCommand}" Style="{StaticResource UserControlMenu}"
                                          Background="#0064C1">
                                    <MenuItem.Icon>
                                        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center">
                                            <materialdesign:PackIcon Foreground="YellowGreen" Height="25" Width="40" Kind="GeneratorPortable" />
                                        </StackPanel>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Router" Visibility="Collapsed" Margin="0,0,0,0"  Click="MenuItem_Click"       CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Header}"
 Command="{Binding RouterConfigCommand}" Style="{StaticResource UserControlMenu}"
                                          Background="#0064C1">
                                    <MenuItem.Icon>
                                        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center">
                                            <materialdesign:PackIcon Foreground="YellowGreen" Height="25" Width="40" Kind="RouterNetworkWireless" />
                                        </StackPanel>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Radio"   Margin="0,0,0,0"    Click="MenuItem_Click"      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Header}"
 Command="{Binding RadioConfigCommand}" Style="{StaticResource UserControlMenu}"
                                            Background="#0064C1">
                                    <MenuItem.Icon>
                                        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center">
                                            <materialdesign:PackIcon Foreground="YellowGreen" Height="25" Width="40" Kind="Radio" />
                                        </StackPanel>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Switch"   Margin="0,0,0,0"   Click="MenuItem_Click"       CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Header}"
 Command="{Binding SwitchConfigCommand}" Style="{StaticResource UserControlMenu}"
                                           Background="#0064C1">
                                    <MenuItem.Icon>
                                        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center">
                                            <materialdesign:PackIcon Foreground="YellowGreen" Height="25" Width="40" Kind="Switch" />
                                        </StackPanel>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="UPS"    Margin="0,0,0,0"   Click="MenuItem_Click"      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Header}"
 Command="{Binding UPSConfigCommand}" Style="{StaticResource UserControlMenu}"
                                            Background="#0064C1">
                                    <MenuItem.Icon>
                                        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center">
                                            <materialdesign:PackIcon Foreground="YellowGreen" Height="25" Width="40" Kind="BatteryCharging60" />
                                        </StackPanel>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </Menu>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Bottom"  Margin="0,0,0,40">
                            <Menu>
                                <Menu.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </Menu.ItemsPanel>
                                <MenuItem Visibility="Collapsed" Header="{Binding Path=subSystemConfig.SubsystemNavText}" Command="{Binding EditSubSystemCommand}" 
                    Style="{StaticResource SubsystemControlMenu}" Foreground="White"   Background="#0064C1">
                                    <MenuItem.Icon>
                                        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center">
                                            <materialdesign:PackIcon Foreground="YellowGreen" Height="30" Width="40" Kind="NoteEdit" />
                                        </StackPanel>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Help" Visibility="Collapsed" Command="{Binding ConfigHelpCommand}" Style="{StaticResource UserControlMenu}"
                    Background="#0064C1">
                                    <MenuItem.Icon>
                                        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center">
                                            <materialdesign:PackIcon Foreground="YellowGreen" Height="30" Width="40" Kind="HelpBoxMultipleOutline" />
                                        </StackPanel>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </Menu>
                        </StackPanel>

                    </Grid>
                </Border>
                <Border Grid.Column="1" Grid.Row="1" Background="White">
                    <StackPanel Height="795">
                        
                        <StackPanel Margin="0, 0, 0 ,0" >
                            <ScrollViewer Height="756" VerticalScrollBarVisibility="Auto" 
                                          Visibility="{Binding Path=subSystemConfig.SystemParamsDetails,Converter={StaticResource ConvertBoleanVisibility}}">
                                <DataGrid AutoGenerateColumns="False" Margin="5, 0, 0 ,5" BorderThickness="0" HeadersVisibility="Column" CellStyle="{StaticResource DataGridCellStyle}"
                                                    FontSize="16" ItemsSource="{Binding Path=subSystemConfig.ConfigCollection}" Background="Transparent">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Params Oid" Binding="{Binding Oid}" IsReadOnly="True" Width="auto"  HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                        <DataGridTextColumn Header="Data Type" Binding="{Binding DataType}" IsReadOnly="True" Width="*"  HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                        <DataGridTextColumn Header="Parameter Name" Binding="{Binding ParamName}" IsReadOnly="True" Width="auto"  HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                        <DataGridTextColumn Header="Min Value" Binding="{Binding MinValue}" IsReadOnly="True" Width="*" HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                        <DataGridTextColumn Header="Max Value" Binding="{Binding MaxValue}" IsReadOnly="True" Width="*" HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                        <DataGridTextColumn Header="Red Range" Binding="{Binding RedRange}" IsReadOnly="True" Width="*" HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                        <DataGridTextColumn Header="Amber Range" Binding="{Binding AmberRange}" IsReadOnly="True" Width="*" HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                        <DataGridTextColumn Header="Green Range" Binding="{Binding GreenRange}" IsReadOnly="True" Width="*" HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                            <ScrollViewer Height="734" VerticalScrollBarVisibility="Auto" 
                                          Visibility="{Binding Path=subSystemConfig.IsSubsystemDetails,Converter={StaticResource ConvertBoleanVisibility}}">
                                <DataGrid AutoGenerateColumns="False" BorderThickness="0" HeadersVisibility="Column" CellStyle="{StaticResource DataGridCellStyle}" 
                                          FontSize="16" ItemsSource="{Binding Path=subSystemConfig.SubsystemConfigCollection}" Background="Transparent">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" IsReadOnly="True" Width="auto"  HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                        <DataGridTextColumn Header="Destination" Binding="{Binding Destination}" IsReadOnly="True" Width="*"  HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                        <DataGridTextColumn Header="Port" Binding="{Binding Port}" IsReadOnly="True" Width="auto"  HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                        <DataGridTextColumn Header="Port Trap" Binding="{Binding PortTrap}" IsReadOnly="True" Width="*" HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                        <DataGridTextColumn Header="Filename" Binding="{Binding Filename}" IsReadOnly="True" Width="*" HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                        <DataGridTextColumn Header="Version" Binding="{Binding Version}" IsReadOnly="True" Width="*" HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>

        <!--#region Device Interface Popup-->
        <Popup IsOpen="{Binding Path=subSystemConfig.IsConfigPopupOpen}" StaysOpen="False"  Placement="Center" PopupAnimation="Fade" Width="680" Height="250" AllowsTransparency="True">
            <Border CornerRadius="6" Width="640" Height="210" Background="#0064c1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.8"  Color="{StaticResource Color033D5E}" ShadowDepth="10" />
                </Border.Effect>
                <Grid>
                    <StackPanel VerticalAlignment="Center" Margin="8 0 8 0">
                        <TextBlock Style="{StaticResource txthelpPopup}">
                            This subsystem configuration information can be edited by the user with a click of the 
                            <Run Foreground="White">Edit button</Run>. 
                            All editable information will be reflected after clicking the 
                            <Run Foreground="YellowGreen">Refresh button</Run>.
                        </TextBlock>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right">
                        <Button Command="{Binding CancelPopupCommand}" Style="{StaticResource ClosePopPup}" Margin="0 0 10 10"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
        <!--#endregion-->

    </Grid>
</UserControl>
