<UserControl x:Class="LCPReportingSystem.UserControls.ManageArchiveUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="795" d:DesignWidth="1500">
    <UserControl.Resources>
        <!-- Flat Button Style -->
        <Style TargetType="Button" x:Key="FlatButton">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListViewItem Style -->
        <Style  TargetType="ListViewItem"  x:Key="ListViewStyle">
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#f0f8ff"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0E9FF"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ScrollThumbs" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid x:Name="Grid">
                            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto" Fill="Transparent"/>
                            <Border x:Name="Rectangle1" CornerRadius="0 0 0 0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto" 
                                    Background="#0064C1"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Horizontal">
                                <Setter TargetName="Rectangle1" Property="Width" Value="Auto"/>
                                <Setter TargetName="Rectangle1" Property="Height" Value="7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--SCROLLBARS-->
        <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="Foreground" Value="#034268"/>
            <Setter Property="Background" Value="#684268"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="GridRoot" Width="8" Background="{x:Null}">
                            <Track x:Name="PART_Track" Grid.Row="0" IsDirectionReversed="true" Focusable="False">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Background="{TemplateBinding Foreground}" Style="{DynamicResource ScrollThumbs}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="False"/>
                                </Track.IncreaseRepeatButton>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="False"/>
                                </Track.DecreaseRepeatButton>
                            </Track>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger SourceName="Thumb" Property="IsMouseOver" Value="true">
                                <Setter Value="{DynamicResource ButtonSelectBrush}" TargetName="Thumb" Property="Background"/>
                            </Trigger>
                            <Trigger SourceName="Thumb" Property="IsDragging" Value="true">
                                <Setter Value="{DynamicResource DarkBrush}" TargetName="Thumb" Property="Background"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="Thumb" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter TargetName="GridRoot" Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="-90"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="PART_Track" Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="-90"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Width" Value="Auto"/>
                                <Setter Property="Height" Value="12"/>
                                <Setter TargetName="Thumb" Property="Tag" Value="Horizontal"/>
                                <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand"/>
                                <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="#0064C1">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="285"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

       
            <StackPanel Orientation="Horizontal" Background="#0064C1" Grid.Column="0" Grid.Row="0" Width="285" Height="35" >
            <Button x:Name="FilterButton" Margin="0,0,0,0" Width="285"  Height="32" Content="Filter"  Click="FilterButton_Click" HorizontalAlignment="Center" Style="{StaticResource btnFilterArchive}"></Button>
            <materialdesign:PackIcon Foreground="White" Height="30" Width="30" Kind="ArrowDropDown" Margin="-130,2,0,0" />
        </StackPanel>
            <TextBlock x:Name="txtWindowName" Grid.Column="1" Height="35" Padding="500,2,0,0" Width="1215" Background="White"  Foreground="#0064C1" Margin="0,0,0,0" HorizontalAlignment="Left" Text="ARCHIVE MANAGEMENT"  FontSize="18" FontWeight="Bold" ></TextBlock>



        <Border Grid.Column="0" Grid.Row="1">
            <Grid Height="795">
                
                <StackPanel Height="0" VerticalAlignment="Bottom">
                    <Menu>
                        <Menu.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </Menu.ItemsPanel>
                        <MenuItem x:Name="FileExplorerMenu" Click="FileExplorerMenu_Click"  Header=" Archieve File Explorer" Visibility="Collapsed"  BorderThickness="0" Style="{StaticResource UserControlMenu}"  Background="#0064C1">
                            <MenuItem.Icon>
                                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center">
                                    <materialdesign:PackIcon Foreground="Yellow" Height="30" Width="40" Kind="File" />
                                </StackPanel>

                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Header="Help" Margin="0,2,0,0" Command="{Binding IArchiveHelpCommand}" BorderThickness="0" Style="{StaticResource UserControlMenu}"  Background="#0064C1">
                            <MenuItem.Icon>
                                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center">
                                    <materialdesign:PackIcon Foreground="Yellow" Height="30" Width="40" Kind="HelpBoxMultipleOutline" />
                                </StackPanel>

                            </MenuItem.Icon>
                        </MenuItem>
                    </Menu>
                </StackPanel>

                <StackPanel x:Name="FiltersBorder" Width="285"  Orientation="Vertical" Margin="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" >

                    <!-- From Date -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                        <TextBlock Text="From Date"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontSize="14" Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                       VerticalAlignment="Center" />
                        <xctk:DateTimePicker x:Name="fromdateTimePicker"
                                 Width="260"
                                 Height="28"  Margin="5,2,0,0" Padding="0,0,0,0"
                                 FontSize="14"
                                 FontWeight="SemiBold" Format="FullDateTime"   FormatString="dd-MM-yyyy HH:mm:ss"
                                 VerticalContentAlignment="Center" TextAlignment="Left"
                                 Value="{Binding Path=archive.SeletedFromDate,Mode=TwoWay}"  />
                    </StackPanel>

                    <!-- To Date -->
                    <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                        <TextBlock Text="To Date"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontSize="14"  Margin="10,0,0,0"
                      HorizontalAlignment="Left"
                       VerticalAlignment="Center" />
                        <xctk:DateTimePicker x:Name="todateTimePicker"
                                 Width="260"
                                 Height="28" Margin="5,0,0,0"  Padding="0,0,0,0" TextAlignment="Left"
                                 FontSize="14"
                                 FontWeight="SemiBold"
                                 VerticalContentAlignment="Center"
                                 Value="{Binding Path=archive.SeletedToDate,Mode=TwoWay}" />
                    </StackPanel>
               
                    <StackPanel x:Name="SubsystemPanel" Orientation="Vertical" Margin="0,10,0,0" HorizontalAlignment="Left">
                        <TextBlock Text="Select  SubSystem "
                             Foreground="White"
                             FontWeight="SemiBold"
                             FontSize="14" Margin="10,0,0,0"
                             VerticalAlignment="Center"
                             />
                        <ComboBox x:Name="cmbSubsystem"
                                Width="260" Margin="10,10,0,0"
                                Height="30"
                                FontSize="14"
                                SelectionChanged="cmbSubsystem_SelectionChanged"                              
                                Style="{StaticResource LineComboStyle}"
                                ItemContainerStyle="{StaticResource LineComboItems}">


                            <ComboBoxItem>Diesel Generator1</ComboBoxItem>
                            <ComboBoxItem>Diesel Generator2</ComboBoxItem>
                            <ComboBoxItem>Radio1</ComboBoxItem>
                            <ComboBoxItem>Radio2</ComboBoxItem>
                            <ComboBoxItem>Switch1</ComboBoxItem>
                            <ComboBoxItem>Switch2</ComboBoxItem>
                            <ComboBoxItem>UPS1</ComboBoxItem>
                            <ComboBoxItem>UPS2</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>


                    <!-- SNMP Type -->
                    <GroupBox  x:Name="SNMPTypePanel" Header="Data Type" FontSize="14" Height="50" Width="260"  Margin="0,10,0,0" BorderThickness="0.5" Foreground="White" FontWeight="SemiBold">
                        <StackPanel Orientation="Horizontal" Margin="10,10,0,0" HorizontalAlignment="Left">
                            <RadioButton GroupName="SnmpType"
        IsChecked="{Binding Path=archive.IsNonTrap}"
         Cursor="Hand"
         Foreground="White"
         Margin="0,0,0,0" Padding="5,-4,0,0">
                                <TextBlock Text="Non Trap" FontSize="14" FontWeight="SemiBold"/>
                            </RadioButton>

                            <RadioButton GroupName="SnmpType"
         IsChecked="{Binding Path=archive.IsTrap}"
         Cursor="Hand" Margin="40,0,10,0" Padding="5,-4,0,0"
         Foreground="White">
                                <TextBlock Text="Trap" FontSize="14" FontWeight="SemiBold"/>
                            </RadioButton>
                        </StackPanel>

                    </GroupBox>

                    <StackPanel  Orientation="Vertical" Margin="0,0,0,0">
                        <Button Content="View Data"   Width="255" Margin="0,20,0,0"  Height="30" Foreground="White" FontWeight="SemiBold" Command="{Binding IFilterViewCommand}"  Style="{StaticResource btnNextPage}" />
                        <Button  x:Name="btnsave" Content="Save"   Width="255"    Style="{StaticResource btnNextPage}" Command="{Binding SaveCommand}" Margin="0,20,0,0"  Height="30"    FontWeight="SemiBold"/>
                        <Button Content="Delete" Width="255" Margin="0,20,0,0"  Height="30" Foreground="White" FontWeight="SemiBold" Command="{Binding IDeleteArchiveCommand}" Style="{StaticResource btnNextPage}"/>
                    </StackPanel>




                </StackPanel>

            </Grid>
        </Border>
        <Border Grid.Column="1" Grid.Row="1">
            
            <Grid Height="800">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>


                </Grid.RowDefinitions>
                <StackPanel Height="30" Visibility="Collapsed" Width="1280" Grid.Row="0" Background="White" HorizontalAlignment="Left" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" >

                        <TextBlock Grid.Column="0" Grid.Row="0" Margin="5,0,0,0" Padding="0,5,0,0" Text="From " Foreground="#0064C1" FontWeight="SemiBold" FontFamily="Arial Unicode MS Regular" FontSize="16" />
                        <xctk:DateTimePicker x:Name="FromDatetimepicker" Grid.Column="1"  BorderThickness="1" Grid.Row="1" Padding="0,5,0,0" Margin="5,0,0,0" Height="25" Width="200"
                              Value="{Binding Path=archive.SeletedFromDate,Mode=TwoWay}" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" >
                           

                        </xctk:DateTimePicker>
                        <TextBlock Text="To " Margin="20,0,0,0" Foreground="#0064C1" FontWeight="SemiBold" Padding="0,5,0,0" FontFamily="Arial Unicode MS Regular" FontSize="16"/>
                        <xctk:DateTimePicker Grid.Column="1" Padding="0,5,0,0" Grid.Row="1"  Height="25" Margin="5,0,0,0" Width="200"
                              Value="{Binding Path=archive.SeletedToDate,Mode=TwoWay}" FontSize="15" FontWeight="SemiBold" FontFamily="Arial">

                         
                        </xctk:DateTimePicker>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton GroupName="SnmpsType" Margin="20,3.5,0,0" Padding="0,0,0,0"  IsChecked="{Binding Path=archive.IsNonTrap}" Cursor="Hand" BorderBrush="#3479C2">
                            <RadioButton.BorderThickness>
                                <Thickness Left="4" Right="4" Top="4" Bottom="4"/>
                            </RadioButton.BorderThickness>
                            <TextBlock Text="Snmp Non Trap"  Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular" 
               HorizontalAlignment="Center" Margin="0 3 0 0"/>
                        </RadioButton>
                        <RadioButton GroupName="SnmpsType" Margin="20,3.5,0,0" IsChecked="{Binding Path=archive.IsTrap}" Cursor="Hand" BorderBrush="#3479C2">
                            <RadioButton.BorderThickness>
                                <Thickness Left="4" Right="4" Top="4" Bottom="4"/>
                            </RadioButton.BorderThickness>
                            <TextBlock Text="Snmp Trap" Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular" 
         HorizontalAlignment="Center" Margin="0 3 0 0"/>
                        </RadioButton>
                    </StackPanel>
                   
                    <!--<StackPanel  Orientation="Horizontal" Margin="225,-2,0,0">
                        <Button Content="Save" x:Name="btnsave"  Background="White" Foreground="White" Style="{StaticResource btnNextPage}" Command="{Binding SaveCommand}" 
 HorizontalAlignment="Right" Margin="20,0,0,0" Width="82" Height="25"    FontWeight="SemiBold"/>
                        <Button Content="View"  Width="82" Height="25" Foreground="White" FontWeight="SemiBold" Command="{Binding IFilterViewCommand}" Margin="2,0,0,0" Style="{StaticResource btnNextPage}" />
                        <Button Content="Delete"   Width="82" Height="25" Foreground="White" FontWeight="SemiBold" Command="{Binding IDeleteArchiveCommand}" Margin="2,0,0,0" Style="{StaticResource btnNextPage}"/>
                    </StackPanel>-->
                   
                   
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="0 -30 0 0" Background="White">
                    <ScrollViewer Height="720" VerticalScrollBarVisibility="Auto">
                        <DataGrid  Height="710" VerticalAlignment="Top" AutoGenerateColumns="False"   CanUserAddRows="False" BorderBrush="LightGray" BorderThickness="1" Margin="5,0,5,5"  HeadersVisibility="Column" 
                        FontSize="16" x:Name="ShowReport" SelectionMode="Extended" ItemsSource="{Binding Path=archive.ArchiveCollection}" Background="Transparent">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Record Id" Binding="{Binding RecordID}" IsReadOnly="True" Width="auto"  HeaderStyle="{StaticResource SubSysConfigGridHeader}"                                />
                                <DataGridTextColumn Header="SubSystem Name" Binding="{Binding SystemName}"  IsReadOnly="True" Width="*"  HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                <DataGridTextColumn x:Name="ParameterColumn" Header="Parameter Name" Binding="{Binding PrameterName}" IsReadOnly="True" Width="*"  HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                <DataGridTextColumn x:Name="ParameterValueColumn" Header="Parameter Value" Binding="{Binding PrameterValue}" IsReadOnly="True" Width="auto" HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                <DataGridTextColumn Header="Time Stamp" Binding="{Binding DateTimeStamp}" IsReadOnly="True" Width="*" HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                                <DataGridTextColumn Header="Record Date" Binding="{Binding CurrentDate,StringFormat='dd-MM-yyyy'}" IsReadOnly="True" Width="*" HeaderStyle="{StaticResource SubSysConfigGridHeader}"/>
                            </DataGrid.Columns>
                            <DataGrid.AlternatingRowBackground>
                                <SolidColorBrush Color="LightGray"/>
                            </DataGrid.AlternatingRowBackground>
                        </DataGrid>
                    </ScrollViewer>
                    <StackPanel Height="42" Width="350" Visibility="Collapsed" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0 0 30 0">
                        <Button IsEnabled="{Binding Path=archive.IsPreviousPageEnable}" BorderBrush="White" BorderThickness="1" Style="{StaticResource btnNextPage}" Content="Previous" 
                                Command="{Binding NavPreviousPageCommand}" Margin="0 0 5 0"/>
                        <TextBlock Width="120" Foreground="#0064C1" Text="{Binding Path=archive.PageDetails}" TextAlignment="Center"
                                   FontFamily="Arial Unicode MS Bold" FontSize="16" 
                                   VerticalAlignment="Center" />
                        <Button IsEnabled="{Binding Path=archive.IsNextPageEnable}" Style="{StaticResource btnPreviousPage}" Content="Next" 
                                Command="{Binding NavNextPageCommand}" Margin="16 0 0 0"/>
                    </StackPanel>
                    <StackPanel x:Name="PageButtonsPanel" Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="5">
                        <Button Content="First" Visibility="Collapsed" Command="{Binding FirstPageCommand}" Margin="5"/>
                        <Button Content="Prev" Command="{Binding NavPreviousPageCommand}" Style="{StaticResource btnNextPage}" Margin="5"/>

                        <TextBlock Text="{Binding Path=archive.CurrentPage}" Width="20" VerticalAlignment="Center" Margin="5"/>
                        <TextBlock Text=" / " VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Path=archive.TotalPage}" Width="20" VerticalAlignment="Center" Margin="5"/>

                        <Button Content="Next " Command="{Binding NavNextPageCommand}" Tag="Next" CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}" Style="{StaticResource btnNextPage}" Margin="5"/>
                        <Button Content="Last >>" Visibility="Collapsed"  Margin="5"/>

                        <!-- Go To Page -->
                        <TextBlock Text="Go to:" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,5,0"/>
                        <TextBox Width="50" Text="{Binding Path=archive.GoToPageNumber, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                        <Button Content="Go" Command="{Binding NavNextPageCommand}" Tag="Go" CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}" Style="{StaticResource btnNextPage}" Margin="5"/>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Border>

        <!--#region Device Interface Popup-->
        <Popup IsOpen="{Binding Path=archive.IsArchiveHelPopupOpen}" Placement="Center" StaysOpen="False" PopupAnimation="Fade" AllowsTransparency="True" Width="680" Height="250">
            <Border CornerRadius="6" Width="640" Height="210" Background="{StaticResource GradientBackground3}">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.8"  Color="{StaticResource Color033D5E}" ShadowDepth="10" />
                </Border.Effect>
                <Grid>
                    <StackPanel VerticalAlignment="Center" Margin="8 0 8 0">
                        <TextBlock Style="{StaticResource txthelpPopup}">
                            The archive data can be viewed and deleted by the user clicking the <Run Foreground="#FE4F64">Delete</Run> 
                            button according to the selected <Run Foreground="{StaticResource BrushF78103}">From Date</Run> 
                            and <Run Foreground="{StaticResource BrushF78103}">To Date</Run>.
                        </TextBlock>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right">
                        <Button Command="{Binding ArchiveClosePopupCommand}" Style="{StaticResource ClosePopPup}" Margin="0 0 10 10"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
        <!--#endregion-->

        <Border x:Name="FileExplorerBoarder" Visibility="Collapsed" CornerRadius="0" BorderBrush="Black" Grid.Column="1" BorderThickness="1" Background="#EEEFF3" Width="810" Height="485" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.8"  Color="{StaticResource Color033D5E}" ShadowDepth="10" />
                </Border.Effect>
                <StackPanel>
                <Border Background="#FF116FA4" Height="30" CornerRadius="1" Visibility="Visible" Margin="0,0,0,1">
                    <StackPanel Orientation="Horizontal">
                        <Label x:Name="fileExplorerNameLabel" Width="770" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Archieve File Explorer" Background="Transparent" FontSize="18" Padding="10,0,0,0" Foreground="White" FontWeight="bold" />

                        <Button  x:Name="btnCancel" HorizontalAlignment="Right" Width="30" Margin="5,-1,0,0" Click="btnCancel_Click" Height="30" Style="{StaticResource Button_Main_WhiteText}">
                            <materialdesign:PackIcon Foreground="White" Height="20" Padding="0,0,0,0" Width="20" Kind="Close" />

                        </Button>

                    </StackPanel>
                </Border>
                <ListView x:Name="FileListView" Width="810" MaxHeight="415" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled"  Margin="0,2,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"
                          AlternationCount="2" Background="#EEEFF3" >
                        <ListView.Resources>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Height" Value="30"></Setter>
                                <Setter Property="Background" Value="#FF116FA4"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="14"></Setter>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5,3"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="GridViewColumnHeader">
                                            <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="4"/>
                                <Setter Property="Margin" Value="2"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D0E9FF"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#BBDEFB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView>
                                <!-- S.No -->
                                <GridViewColumn Header="S.No" Width="50">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding SerialNo}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Filename -->
                                <GridViewColumn Header="Filename" Width="698">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Copy Path Button -->
                                <!--<GridViewColumn Header="Copy" Width="50">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button  Tag="{Binding CopyPath}" Click="CopyPath_Click">

                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <materialdesign:PackIcon x:Name="icon" Kind="ContentCopy" Height="24" Width="24" Foreground="Black"/>
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="icon" Property="Foreground" Value="DeepSkyBlue"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>-->

                                <!-- Open File Button -->
                                <GridViewColumn Header="View" Width="55">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="View" Tag="{Binding FilePath}" Click="OpenFile_Click">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <materialdesign:PackIcon x:Name="icon" Kind="EyeCircle" Height="24" Width="24" Foreground="Black"/>
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="icon" Property="Foreground" Value="DeepSkyBlue"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    

                </StackPanel>
            </Border>
         
        <StackPanel x:Name="EdittxtFilePanel"
            Grid.Column="1"
            Margin="20,50,0,0"
            Width="700"
            Background="#F5F7FA"
            HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" >

            <!-- File Name Header -->
            <Border Background="#FF116FA4"
            Padding="8"
            CornerRadius="4"
            Visibility="Visible"
            Margin="0,0,0,1">
                <StackPanel Orientation="Horizontal">
                    <Label x:Name="txtfileNameLabel" Width="600"
                            Background="Transparent"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="16" />        
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="22,0,0,0">
                        <Button x:Name="btnSavetxtFile"
                                Visibility="Collapsed"
                                Width="30"
                                Margin="0,0,10,0"
                                Height="30"
                                ToolTip="Save"
                                Click="btnSavetxtFile_Click"
                                Style="{StaticResource Button_Main_WhiteTextwithoutLine}">
                            <materialdesign:PackIcon Foreground="White" Height="25" Padding="0,0,0,0" Width="25" Kind="ContentSave" />

                        </Button>
                        <Button x:Name="btnCanceltxtFile" Margin="-5,0,0,0"
                               ToolTip="Cancel"
                                Width="30"
                                Height="30"
                                Click="btnCanceltxtFile_Click"
                                Style="{StaticResource Button_Main_WhiteTextwithoutLine}">

                            <materialdesign:PackIcon Foreground="White" Height="25" Padding="0,0,0,0" Width="25" Kind="Close" />

                        </Button>
                    </StackPanel>
                </StackPanel>
               
            </Border>

            <!-- Editable Text Area -->
            <TextBox x:Name="FileEditor"
             AcceptsReturn="True"
             VerticalScrollBarVisibility="Auto"
             TextWrapping="Wrap"
             FontFamily="Consolas"
             IsReadOnly="True"
             FontSize="14"
             Background="white"
             BorderBrush="#B0BEC5"
             BorderThickness="2"
             Padding="10"
             Margin="0,0,0,10"
             Foreground="#212121"
             SelectionBrush="#2969BB"
             CaretBrush="Black"
             Height="500">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#2969BB"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter Property="BorderBrush" Value="#2969BB"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <!-- Save & Cancel Buttons -->
            

        </StackPanel>


    </Grid>
</UserControl>
